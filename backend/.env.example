# Database
MONGODB_URI=mongodb://localhost:27017/ignite-ecommerce
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ignite-ecommerce

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-should-be-64-chars-long
JWT_EXPIRES_IN=7d

# Server
PORT=3001
NODE_ENV=development

# Payment Gateways
# Razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Stripe (Alternative)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email (for order notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Admin default credentials
ADMIN_EMAIL=admin@ignite.com
ADMIN_PASSWORD=admin123
